<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrewersHelper.Views.Overview"
             BackgroundColor="#2d3e50">
		<StackLayout VerticalOptions="Start">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="100"/>
				</Grid.RowDefinitions>

<!--				<Grid.ColumnDefinition>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="100" />
				</Grid.ColumnDefinition>-->

			</Grid>

			<Label Text="Reading" x:Name="AlcoholReadingLabel" Grid.Row="0"/>
			<BoxView Color="Gray" Grid.Row="1"/>
			<Button Text="Treshhold" Grid.Row="2"/>

			<StackLayout Orientation="Horizontal" VerticalOptions="Center">
				<Label Text="Reading" x:Name="GravityReadingLabel"></Label>
				<BoxView Color="Gray"></BoxView>
				<Button Text="Treshhold"></Button>
			</StackLayout>
			<StackLayout>
				<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

	    		<Label Text="This is the overview page" VerticalOptions="Center" HorizontalOptions="Center" />
	    		<Button FontSize="11" Text="{Binding ReadingsButtonLabel}" Command="{Binding ReadingsButtonCommand}"
	            VerticalOptions="Center" HorizontalOptions="Center" />
  			</StackLayout>
		</StackLayout>


</ContentPage>