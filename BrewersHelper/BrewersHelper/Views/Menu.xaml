<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrewersHelper.Views.Menu">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout VerticalOptions="End">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.25*" />
        <ColumnDefinition Width="0.25*" />
        <ColumnDefinition Width="0.25*" />
        <ColumnDefinition Width="0.25*" />
      </Grid.ColumnDefinitions>
      <Button FontSize="11" Text="{Binding OverviewButtonLabel}" Command="{Binding OverviewButtonCommand}" Grid.Column ="0"/>
      <Button FontSize="11" Text="{Binding ManageDevicesButtonLabel}" Command="{Binding ManageDevicesButtonCommand}" Grid.Column ="1"/>
      <Button FontSize="11" Text="{Binding ThresholdsButtonLabel}" Command="{Binding ThresholdsButtonCommand}" Grid.Column ="2"/>
      <Button FontSize="11" Text="{Binding HistoryButtonLabel}" Command="{Binding HistoryButtonCommand}" Grid.Column ="3"/>
    </Grid>
  </StackLayout>
</ContentPage>